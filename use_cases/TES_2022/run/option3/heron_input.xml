<HERON>
  <Case name="Option3">
    <mode>opt</mode>
    <verbosity>debug</verbosity>
    <num_arma_samples>10</num_arma_samples>
    <debug></debug>
    <time_discretization>
      <time_variable>hour</time_variable>
      <year_variable>Year</year_variable>
      <end_time>23</end_time>
      <num_steps>24</num_steps>
    </time_discretization>
    <economics>
      <ProjectTime>30</ProjectTime>
      <DiscountRate>0.08</DiscountRate>
      <tax>0.08</tax>
      <inflation>0.0</inflation>
      <verbosity>50</verbosity>
    </economics>
    <dispatcher>
      <pyomo></pyomo>
    </dispatcher>
    <optimization_settings>
      <metric>expectedValue</metric>
      <type>max</type>
      <persistence>3</persistence>
    </optimization_settings>
  </Case>

  <Components>
    <!-- PRODUCERS -->
    <Component name="NPP">
      <produces resource="reactor_heat" dispatch="fixed">
        <capacity resource="reactor_heat">
          <fixed_value>158.8</fixed_value> <!-- MWth -->
        </capacity>
      </produces>
      <economics>
        <lifetime>30</lifetime>
      </economics>
    </Component>

    <Component name="TES_Charger">
      <produces resource="tes_heat" dispatch="independent">
        <consumes>reactor_heat</consumes>
        <capacity resource="reactor_heat">
          <fixed_value>-100</fixed_value><!-- MWth-->
          <!-- Max charging power set to 100MWth-->
        </capacity>
        <transfer>
          <linear>
            <rate resource="reactor_heat">-1</rate>
            <rate resource="tes_heat">1</rate>
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>30</lifetime>
        <CashFlow name="TES_Charger_capex" type="one-time" taxable="True" inflation="None" mult_target="False">
          <!--TODO: dummy values, replace-->
          <driver>
            <variable>TES_Charger_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-3000</fixed_value>
            <!--  $/MWhth, TODO replace -->
          </reference_price>
          <scaling_factor_x>
            <fixed_value>1</fixed_value>
            <!-- TODO replace -->
          </scaling_factor_x>
          <reference_driver>
            <fixed_value>1</fixed_value>
            <!-- TODO replace -->
          </reference_driver>
        </CashFlow>
      </economics>
    </Component>

    <Component name="TES">
      <stores resource="tes_heat" dispatch="independent">
        <capacity resource="tes_heat">
          <opt_bounds>0,952.8</opt_bounds>
          <!-- Max 6 hours of heat stored -->
        </capacity>
        <initial_stored>
          <fixed_value>30</fixed_value>
        </initial_stored>
        <RTE>0.9</RTE> <!--TODO: check this value -->
      </stores>
      <economics>
        <lifetime>30</lifetime> <!-- TODO check this value-->
        <!-- TODO: OM ??-->
        <CashFlow name="TES_capex" type="one-time" taxable="True" inflation="None" mult_target="False">
          <!--TODO: dummy values, replace-->
          <driver>
            <variable>TES_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-3000</fixed_value>
            <!--  $/MWhth, TODO replace -->
          </reference_price>
          <scaling_factor_x>
            <fixed_value>1</fixed_value>
            <!-- TODO replace -->
          </scaling_factor_x>
          <reference_driver>
            <fixed_value>1</fixed_value>
            <!-- TODO replace -->
          </reference_driver>
        </CashFlow>
      </economics>
    </Component>

    <Component name="Converter">
      <!-- Virtual free component to make sure heat from the TES does not go to the turbine -->
      <produces resource="reactor_heat" dispatch="independent">
        <consumes>tes_heat</consumes>
        <capacity resource="tes_heat">
          <fixed_value>-100</fixed_value>
          <!-- Max discharge power 100MWth-->
        </capacity>
        <transfer>
          <linear>
            <rate resource="reactor_heat">1</rate>
            <rate resource="tes_heat">-1</rate>
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>30</lifetime>
      </economics>
    </Component>

    <Component name="BOP">
      <produces resource="electricity" dispatch="independent">
        <consumes>reactor_heat</consumes>
        <capacity resource="reactor_heat">
          <opt_bounds>-258.8,0</opt_bounds>
          <!-- Bounds up to full capacity of NPP and TES: 
            Max discharge power =100 MWth
            NPP output = 158.8MWth-->
        </capacity>
        <transfer>
          <linear>
            <rate resource="reactor_heat">-1</rate>
            <rate resource="electricity">0.33</rate>
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>30</lifetime> <!-- TODO: check this value -->
        <!-- Assuming OM costs are negligible compared to NPP's -->
        <CashFlow name="BOP_capex" type="one-time" taxable="True" inflation="None" mult_target="False">
          <!--TODO: dummy values, replace-->
          <driver>
            <variable>BOP_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-1000</fixed_value>
            <!--  $/MWth, TODO replace -->
          </reference_price>
          <scaling_factor_x>
            <fixed_value>1</fixed_value>
            <!-- TODO replace -->
          </scaling_factor_x>
          <reference_driver>
            <fixed_value>1</fixed_value>
            <!-- TODO replace -->
          </reference_driver>
        </CashFlow>
      </economics>
    </Component>
  </Components>

  <DataGenerators>
    <ARMA name='price' variable="price">../../train/Output_2018_2021_to2045_presvInpCDF_0_1_F1095_F168/arma.pk</ARMA>
  </DataGenerators>
</HERON>

  